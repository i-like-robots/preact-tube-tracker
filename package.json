{
  "name": "preact-tube-tracker",
  "private": true,
  "scripts": {
    "start": "BABEL_ENV=server; env $(cat .env) nodemon index.js",
    "build-styles": "node-sass src/client/styles.scss public/bundle.css --output-style compressed --source-map true",
    "build-scripts": "BABEL_ENV=browser; webpack -p",
    "build": "parallelshell 'npm run build-styles' 'npm run build-scripts'",
    "watch-styles": "npm run build-styles -- --watch",
    "watch-scripts": "npm run build-scripts -- --watch",
    "watch": "parallelshell 'npm run watch-styles' 'npm run watch-scripts'",
    "package": "BABEL_ENV=server; babel -d packaged -D src --ignore src/client && cp -r ./{public,package.json,Procfile} ./packaged"
  },
  "author": "Matt Hinchliffe",
  "license": "GPL",
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.0",
    "babel-loader": "^7.1.2",
    "babel-plugin-transform-react-jsx": "^6.24.1",
    "babel-preset-env": "^1.6.1",
    "json-loader": "^0.5.7",
    "node-sass": "^4.5.0",
    "nodemon": "^1.11.0",
    "parallelshell": "^3.0.2",
    "webpack": "^3.8.1"
  },
  "dependencies": {
    "express": "^4.16.2",
    "preact": "^8.2.6",
    "preact-render-to-string": "^3.7.0"
  },
  "engines": {
    "node": ">= 8.7.0"
  }
}
